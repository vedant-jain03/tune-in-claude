{
  "name": "tune-in-claude",
  "version": "1.0.3",
  "description": "Music plays while Claude Code thinks, pauses when it needs your input. Vibe-code with AI.",
  "main": "dist/index.js",
  "bin": {
    "tune-in": "dist/index.js",
    "tune-in-claude": "dist/claude-wrapper.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js dist/claude-wrapper.js",
    "dev": "tsc --watch",
    "postinstall": "chmod +x node_modules/node-pty/prebuilds/*/spawn-helper 2>/dev/null || true",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "spotify",
    "music",
    "claude",
    "claude-code",
    "cli",
    "vibe-coding",
    "automation",
    "developer-tools"
  ],
  "author": "Vedant Jain",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vedant-jain03/tune-in-claude.git"
  },
  "homepage": "https://github.com/vedant-jain03/tune-in-claude#readme",
  "bugs": {
    "url": "https://github.com/vedant-jain03/tune-in-claude/issues"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "chalk": "^4.1.2",
    "express": "^4.18.2",
    "node-pty": "^1.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
